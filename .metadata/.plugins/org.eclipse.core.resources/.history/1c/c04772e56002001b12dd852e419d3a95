package variaveis;

import javax.swing.JOptionPane;

public class Gemas {

	public static void main(String[] args) {
		int gemas = 1;
		int totalgemas = 0;
		while (gemas > 0) {
			gemas = Integer.parseInt(JOptionPane.showInputDialog("Digite a quantidade de gemas"));
			totalgemas = totalgemas + gemas;
		}
		System.out.println("Você possui um total de: " + (totalgemas + 9998) + " gemas!");
		System.out.println("Você consegue comprar " + (totalgemas / 50) + " packs!");
	}
}